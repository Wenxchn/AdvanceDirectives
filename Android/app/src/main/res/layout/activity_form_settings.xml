<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40dp"
            android:text="Welcome to your form!" />
        <TextView
            android:id="@+id/currQuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="The Question is Displayed Here!" />
        <EditText
            android:id="@+id/currResponseText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Write your response here!"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prevQuestionBut"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:onClick="onPrevClick"
                android:text="prev" />

            <Button
                android:id="@+id/submitAnswerBut"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:onClick="onSubmitClick"
                android:text="Submit" />

            <Button
                android:id="@+id/nextQuestionBut"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:onClick="onNextClick"
                android:text="next" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>